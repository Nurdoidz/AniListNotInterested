{
  "manifest_version": 2,
  "name": "AniList Not Interested",
  "description": "Add anime and manga to a “not interested” list, graying them out in listings.",
  "version": "1.0.0",
  "author": "Nurdoidz",
  "icons": {
    "64": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.anilist.co/*"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "not-interested.css"
      ]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "anilist-not-interested@nurdoidz.com"
    }
  },
  "permissions": [
    "storage"
  ],
  "default_locale": "en-US"
}
